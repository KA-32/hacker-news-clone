    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "compression": "^1.7.4",
    "d3": "^5.16.0",
    "d3-array": "^2.4.0",
    "d3-axis": "^1.0.12",
    "d3-scale": "^3.2.1",
    "d3-selection": "^1.4.1",
    "d3-shape": "^1.3.7",
    "d3-transition": "^1.3.2",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "recharts": "^1.8.5"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.6.0",
